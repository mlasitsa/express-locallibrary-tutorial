extends layout

block content
  h1=title

  form(method='POST' action='')
    .form-group
      label(for='first_name') First Name:
      input#first_name.form-control(type='text' placeholder='First name' name='first_name' required='true' value=(undefined===player ? '' : player.first_name))
    .form-group
      label(for='family_name') Family Name:
      input#family_name.form-control(type='text' placeholder='Family name' name='family_name' required='true' value=(undefined===player ? '' : player.family_name))
    .form-group
      label(for='date_of_birth') Date of birth:
      input#date_of_birth.form-control(type='date' name='date_of_birth' value=(undefined===player ? '' : player.date_of_birth_formatted))
    .form-group
      label(for='position') Position:
      select#position.form-control(name='position' required='true')
        option(value='goalie' selected=(player && player.position === 'goalie')) Goalie
        option(value='forward' selected=(player && player.position === 'forward')) Forward
        option(value='defence' selected=(player && player.position === 'defence')) Defence

    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
