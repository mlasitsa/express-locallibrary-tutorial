extends layout

block content
  h1= title

  ul
    each team in team_list
      li
        a(href=team.url) #{team.title}
        if team.league && team.league.length > 0
          |  (
          each league, index in team.league
            if index > 0
              | ,
            a(href=league.url) #{league.name}
          | )
        else
          |  (League information not available)
    else
      li There are no teams.
